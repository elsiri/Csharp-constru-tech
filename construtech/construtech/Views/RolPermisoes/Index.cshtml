@model IEnumerable<construtech.Models.RolPermiso>

@{
    ViewData["Title"] = "Index";
}

<div class="row my-3">
    <div class="col-md-8"><h2>Roles y permisos</h2></div>
    <div class="col-md-4">
        <a class="btn btn-primary" asp-action="Create"> <span data-feather="plus"></span> Agregar </a>
    </div>
</div>

<table id="table" class="table table-striped table-sm">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdPermisoNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdRolNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdPermisoNavigation.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdRolNavigation.Id)
            </td>
            <td>
                    <a class="btn bg-secondary text-white" asp-action="Edit" asp-route-id="@item.Id">Editar <i class="fa-solid fa-pen-to-square"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
