@model construtech.Models.Categoria

@{
    ViewData["Title"] = "Edit";
}
<div class="row">
    <div class="col-md-12">
        <form id="form" asp-action="Edit">
            <div class="card text-center w-100">
                <div class="card-header bg-primary text-white">
                    <h2>Editar categoria</h2>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="row">
                        <div class="form-group col-6 mt-3">
                            <label asp-for="Nombre" class="form-label"></label>
                            <input asp-for="Nombre" id="nombre" class="form-control" placeholder="Nombre" aria-label="Nombre" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6 mt-3">
                            <label asp-for="Estado" class="form-label">Estado <span class="text-danger">*</span></label>
                            <select asp-for="Estado" id="estado" class="form-select form-select-sm" aria-label=".form-select-sm example">
                                <option value="activo">Activo</option>
                                <option value="inactivo">Inactivo</option>
                            </select>
                            <span asp-validation-for="Estado" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-md-6">
                            <button type="submit" value="Create" class="btn btn-primary w-50">
                                <h4>Editar</h4>
                            </button>
                        </div>
                        <div class="col-md-6">
                            <a type="button" asp-action="Index" class="btn btn-danger w-50"><h4>Cancelar</h4></a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
