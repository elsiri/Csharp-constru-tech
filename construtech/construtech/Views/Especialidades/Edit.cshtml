@model construtech.Models.Especialidade

@{
    ViewData["Title"] = "Edit";
}
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div class="card text-center w-100">
                <div class="card-header bg-primary text-white">
                    <h2>Editar Especialidad</h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group col-md-6 mt-3">
                            <label asp-for="Especialidad" class="control-label"></label>
                            <input asp-for="Especialidad" class="form-control" />
                            <span asp-validation-for="Especialidad" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6 mt-3">
                            <label asp-for="Estado" class="control-label"></label>
                            <input asp-for="Estado" class="form-control" />
                            <span asp-validation-for="Estado" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-md-6">
                            <button type="submit" value="Edit" class="btn btn-primary w-50">
                                <h4>Editar</h4>
                            </button>
                        </div>
                        <div class="col-md-6">
                            <a type="button" asp-action="Index" class="btn btn-danger w-50"><h4>Cancelar</h4></a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
