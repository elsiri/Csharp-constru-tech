@model construtech.Models.Proveedore

@{
    ViewData["Title"] = "Edit";
}
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div class="card text-center w-100">
                <div class="card-header bg-primary text-white">
                    <h2>Editar Proveedor</h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group col-md-6 mt-3">
                            <label asp-for="Nombres" class="control-label"></label>
                            <input asp-for="Nombres" class="form-control" />
                            <span asp-validation-for="Nombres" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6 mt-3">
                            <label asp-for="Direccion" class="control-label"></label>
                            <input asp-for="Direccion" class="form-control" />
                            <span asp-validation-for="Direccion" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6 mt-3">
                            <label asp-for="Estado" class="control-label"></label>
                            <select asp-for="Estado" id="estado" class="form-select form-select-sm" aria-label=".form-select-sm example">
                                <option value="Activo">Activo</option>
                                <option value="Inactivo">Inactivo</option>
                            </select>
                            <span asp-validation-for="Estado" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6 mt-3">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6 mt-3">
                            <label asp-for="Telefono" class="control-label"></label>
                            <input asp-for="Telefono" class="form-control" />
                            <span asp-validation-for="Telefono" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6 mt-3">
                            <label asp-for="NombreContacto" class="control-label"></label>
                            <input asp-for="NombreContacto" class="form-control" />
                            <span asp-validation-for="NombreContacto" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6 mt-3">
                            <label asp-for="TelefonoContacto" class="control-label"></label>
                            <input asp-for="TelefonoContacto" class="form-control" />
                            <span asp-validation-for="TelefonoContacto" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6 mt-3">
                            <label asp-for="EmailContacto" class="control-label"></label>
                            <input asp-for="EmailContacto" class="form-control" />
                            <span asp-validation-for="EmailContacto" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-md-6">
                            <button type="submit" value="Edit" class="btn btn-primary w-50">
                                <h4>Editar</h4>
                            </button>
                        </div>
                        <div class="col-md-6">
                            <a type="button" asp-action="Index" class="btn btn-danger w-50"><h4>Cancelar</h4></a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
